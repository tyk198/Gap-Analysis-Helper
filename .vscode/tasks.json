{
    "$schema": "http://json.schemastore.org/task",
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run Target Python File",
        "type": "shell",
        "command": "python",
        "args": [
          "${workspaceFolder}/Source code/python/main.py"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$python"],
        "detail": "Task to run a specific Python file regardless of the active file."
      }
    ]
  }